<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAppCodeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set \nApp-Code"
                android:textSize="30dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enter the app code here to verify User!!"
                android:textSize="15dp"
                android:layout_marginTop="20dp"

                />




            <EditText
                android:id="@+id/et_app_code"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter Six Digit App Code"
                android:textSize="15dp"
                android:backgroundTint="@color/blue_200"
                android:inputType="number"


                android:drawableStart="@drawable/baseline_lock_24"
                />

            <Button
                android:id="@+id/btn_set_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Set Code"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>



    </ScrollView>





</RelativeLayout>